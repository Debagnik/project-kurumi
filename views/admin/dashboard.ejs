<h1>G'Day, <%= currentUser?.name || 'Administrator' %></h1>
<div class="admin-title">
    <h2>Posts</h2>
    <% if (data.length > 0) { %>
        <a href="/admin/add-post" class="button-link">+ Add New Post</a>
    <% } %>
    
</div>

<% if (data.length > 0) { %>
    <ul class="admin-posts">
        <% data.forEach(post => { %>
            <li>
                <a href="/posts/<%= encodeURIComponent(post.uniqueId) %>" target="_blank" rel="noopener noreferrer">
                    <%= post.title %>&nearr;
                </a>
                <div class="admin-posts-controls">
                    <a href="/edit-post/<%= encodeURIComponent(post.uniqueId) %>" class="btn">Edit</a>
                    <form action="/delete-post/<%= encodeURIComponent(post.uniqueId) %>?_method=DELETE" method="POST">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <input type="submit" value="Delete" class="btn-delete btn">
                    </form>
                </div>
            </li>
        <% }) %>
    </ul>
<% } else { %>
    <center>
        <p>Its a bit empty. ʕ – ㉨ – ʔ</p>
        <a href="/admin/add-post" class="button-link">+ Add New Post</a>
    </center>
<% } %>
